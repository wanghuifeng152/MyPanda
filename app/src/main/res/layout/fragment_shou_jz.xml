<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.whf.mypanda.fragment.ShouJZFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="海外用户暂不支持手机号注册，你可以使用邮箱注册"
            android:textColor="#214fe7" />

        <EditText
            android:id="@+id/edit_zh"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_edit"
            android:hint="账号：请输入手机账号" />

        <TextView
            android:id="@+id/text_sj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号码不能为空"
            android:textColor="#e11111"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_tp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/back_edit"
                android:hint="请输入图片验证码" />

            <TextView
                android:id="@+id/image_tp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_tp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图片验证码输入有误"
                android:textColor="#e11111"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_nu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="验证码不能为空"
                android:textColor="#e11111"
                android:visibility="invisible" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edi_sjm"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/back_edit"
                android:hint="请输入收到的验证码" />

            <Button
                android:id="@+id/but_yz"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#214fe7"
                android:text="获取验证码"
                android:textColor="#fff" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证码不能为空"
            android:textColor="#e11111"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edit_pas"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_edit"
            android:hint="请输入密码" />
        <TextView
            android:id="@+id/text_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证码不能为空"
            android:textColor="#e11111"
            android:visibility="invisible" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:checked="true"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="#214fe7" />


        <Button
            android:id="@+id/rad_zc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_butt"
            android:text="注册"
            android:textColor="#fff" />

    </LinearLayout>

</LinearLayout>
