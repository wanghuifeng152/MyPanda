<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_xc"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <ImageView
            android:id="@+id/hei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_xc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|left"
            android:src="@mipmap/default_time_view" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/hei"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|left|center"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/lpanda_live_layer"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/hei"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom|left|center_vertical"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="Live"
            android:textColor="#fff" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_xc"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

